{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly":true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },

    "allowSyntheticDefaultImports": true
  },
  "include": ["./src","./typings.d.ts"],

  "exclude": ["node_modules", "lib", "es", "dist",  "**/__test__", "test"]
}
